{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	// Es necesario a√±adir el host de docker para que funcione el docker in docker
	"runArgs": [
    "--add-host=host.docker.internal:host-gateway"
  	],
	"features": {
		"docker-in-docker": {
		  "version": "latest",
		  "moby": true,
		  "dockerDashComposeVersion": "v1"
		}
	  },
	"customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-azuretools.vscode-docker",
        "discretegames.f5anything",
        "Github.copilot",
        "GitHub.copilot-chat",
		"bierner.markdown-mermaid",
		"cweijan.vscode-postgresql-client2"
      ]}
	},


	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y postgresql-client && pip3 install -r requirements.txt",
	// mount the docker socket to be able to run docker commands
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	]

}
